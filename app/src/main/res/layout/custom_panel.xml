    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:contentPadding="2dp">

    <TextView
