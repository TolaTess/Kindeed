<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/image_item"
            android:src="@drawable/kindeed_logo"/>

        <TextView
            android:id="@+id/sample_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_item"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/archivo_black"
            android:maxWidth="200dp"
            android:text="text"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/sample_desc"
            android:layout_below="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="@font/abhaya_libre"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorGrey"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/sample_price"
            android:layout_below="@+id/sample_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 EUR"
            android:fontFamily="@font/amarante"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorAccent2"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_item"
            android:layout_alignParentEnd="true"
            card_view:cardBackgroundColor="@color/colorAccent2"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:src="@drawable/cart"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    </androidx.cardview.widget.CardView>
